#ifndef LIB_STM32F103XX_HPP_
#define LIB_STM32F103XX_HPP_


#include "std_type.hpp"

namespace baseAddressesPeripheral {
    /**
     * @brief Base addresses of various peripheral registers in an STM32 microcontroller.
     */
    constexpr StdType::uint8 TIM2 			= 0x40000000; ///< Timer 2 base address
    constexpr StdType::uint8 TIM3 			= 0x40000400; ///< Timer 3 base address
    constexpr StdType::uint8 TIM4 			= 0x40000800; ///< Timer 4 base address
    constexpr StdType::uint8 RTC 			= 0x40002800; ///< Real-Time Clock base address
    constexpr StdType::uint8 WWDG 			= 0x40002C00; ///< Window Watchdog base address
    constexpr StdType::uint8 IWDG 			= 0x40003000; ///< Independent Watchdog base address
    constexpr StdType::uint8 SPI2 			= 0x40003800; ///< SPI 2 base address
    constexpr StdType::uint8 USART2 		= 0x40004400; ///< USART 2 base address
    constexpr StdType::uint8 USART3 		= 0x40004800; ///< USART 3 base address
    constexpr StdType::uint8 I2C1 			= 0x40005400; ///< I2C 1 base address
    constexpr StdType::uint8 I2C2 			= 0x40005800; ///< I2C 2 base address
    constexpr StdType::uint8 USBreg 		= 0x40005C00; ///< USB peripheral register base address
    constexpr StdType::uint8 CAN_USB_SRAM 	= 0x40006000; ///< CAN/USB SRAM base address
    constexpr StdType::uint8 bxCAN 			= 0x40006400; ///< bxCAN base address
    constexpr StdType::uint8 BKP	 		= 0x40006C00; ///< Backup registers base address
    constexpr StdType::uint8 PWR 			= 0x40007000; ///< Power control base address
    constexpr StdType::uint8 AFIO 			= 0x40010000; ///< Alternate function I/O base address
    constexpr StdType::uint8 EXTI 			= 0x40010400; ///< External interrupt base address
    constexpr StdType::uint8 PortA	 		= 0x40010800; ///< Port A base address
    constexpr StdType::uint8 PortB 			= 0x40010C00; ///< Port B base address
    constexpr StdType::uint8 PortC 			= 0x40011000; ///< Port C base address
    constexpr StdType::uint8 PortD 			= 0x40011400; ///< Port D base address
    constexpr StdType::uint8 PortE 			= 0x40011800; ///< Port E base address
    constexpr StdType::uint8 ADC1 			= 0x40012400; ///< ADC 1 base address
    constexpr StdType::uint8 ADC2	 		= 0x40012800; ///< ADC 2 base address
    constexpr StdType::uint8 TIM1 			= 0x40012C00; ///< Timer 1 base address
    constexpr StdType::uint8 SPI1 			= 0x40013000; ///< SPI 1 base address
    constexpr StdType::uint8 USART1 		= 0x40013800; ///< USART 1 base address
    constexpr StdType::uint8 DMA 			= 0x40020000; ///< DMA controller base address
    constexpr StdType::uint8 RCC 			= 0x40021000; ///< Reset and clock control base address
    constexpr StdType::uint8 Flash 			= 0x40022000; ///< Flash memory control base address
    constexpr StdType::uint8 CRC 			= 0x40023000; ///< CRC calculation unit base address
}


#endif /* LIB_STM32F103XX_HPP_ */
